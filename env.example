# MIMS Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_NAME="MIMS Microfinance System"
APP_URL=https://your-domain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mims
DB_USERNAME=mims_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="MIMS System"

# Security Configuration
APP_KEY=your-32-character-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SECURE=true

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=mims_cache

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=uploads/

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Payment Gateway (if applicable)
PAYMENT_GATEWAY=stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# SMS Configuration (if applicable)
SMS_PROVIDER=twilio
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# Logging Configuration
LOG_LEVEL=info
LOG_CHANNEL=file
LOG_FILE=logs/mims.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-backup-bucket

# Monitoring Configuration
MONITORING_ENABLED=true
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Development Configuration (for local development)
DEV_TOOLS_ENABLED=false
DEBUG_BAR_ENABLED=false
